<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="Peni.Profile">
	<StackLayout BackgroundColor="White" Padding="15">
			<Image Source="/Resources/drawable/peni_small.png" x:Name="imageUser" HeightRequest="100" />
				<TableView>
					<TableRoot>
						<TableSection>
							<ViewCell>
								<StackLayout Orientation="Horizontal">
									<Label Text="User's Name" x:Name="labelName"/>

									<Label Text="Stage" x:Name="labelStage" HorizontalOptions="EndAndExpand" />
								</StackLayout>
							</ViewCell>
						</TableSection>
					</TableRoot>
				</TableView>

				<Label Text="Your Bio:" />

				<Editor VerticalOptions="Start" Text="the outlet (or action) for. Keep holding down the Control key while you drag into the header file. Finish dragging below the @interface definition. A blue line should appear with a caption Insert Outlet or Outlet Collection, as illustrated in the screenshot below." />

				<TableView>
					<TableRoot> 
						<TableSection>
								<SwitchCell Text="Appear in Other Gardens?" x:Name="switchPrivacy" />
						</TableSection>
					</TableRoot>
				</TableView>		
	</StackLayout>
</ContentPage>
