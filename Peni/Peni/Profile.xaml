<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="Peni.ProfilePage">
	<StackLayout BackgroundColor="White" Padding="15">
			<Image Source="peni_happy.png" x:Name="imageUser" HeightRequest="100" />
				<TableView>
					<TableRoot>
						<TableSection>
							<ViewCell>
								<StackLayout Orientation="Horizontal">
									<Label Text="{Binding Username}" x:Name="labelName"/>
									<Label Text="{Binding Stage}" x:Name="labelStage" HorizontalOptions="EndAndExpand" />
								</StackLayout>
							</ViewCell>
						</TableSection>
					</TableRoot>
				</TableView>

				<Label Text="Your Bio:" />

				<Editor x:Name="Bio" VerticalOptions="Start" Text="{Binding Bio}" />

				<TableView>
					<TableRoot> 
						<TableSection>
								<SwitchCell Text="Appear in Other Gardens?" OnChanged="UpdatePrivacy" x:Name="switchPrivacy" On="{Binding PrivateProfile}" />
						</TableSection>
					</TableRoot>
				</TableView>		
	</StackLayout>
</ContentPage>
