<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="Peni.ForumThreadPage" Title="TopicName">
	<ContentView BackgroundColor="White" Padding="5">
		<ScrollView Orientation="Vertical" VerticalOptions="FillAndExpand">
			<StackLayout Orientation="Vertical" VerticalOptions="FillAndExpand">
				<!--- Start of Topic Header Bar -->
				<StackLayout Orientation="Vertical" x:Name="Header" VerticalOptions="Start" Padding="10, 0, 10, 0">
					<Grid>
						<Label Text="Topic Title" Grid.Row="0" Grid.Column="0" FontAttributes="Bold" FontSize="16" TextColor="#000"/>
						<Label Text="(# Comments)" Grid.Row="0" Grid.Column="1" TextColor="#000"/>
						<Label Text="Author" Grid.Row="1" Grid.Column="0" TextColor="#000"/>
						<Label Text="Date" Grid.Row="1" Grid.Column="1" TextColor="#000"/>
						<Image Source="notFavorite.png" HeightRequest="35" WidthRequest="35" Grid.Row="0" Grid.Column="2"></Image>
					</Grid>
				</StackLayout>
				<!-- Used to identify seperation between header data from content data -->
				<BoxView WidthRequest="1" HeightRequest="1" BackgroundColor="#F16378" />
				<!--- End of Topic Header Bar -->
				<!--- Start of Post Content -->
				<StackLayout Padding="10, 0, 10, 0" VerticalOptions="StartAndExpand">
					<!-- Find a way to apply anything below here to black text -->
					<Label Text="Post Content Will Go Here... I'm not sure if Label is the optimal choice for displaying information about a post... This is also a scrollable thing so once there's too much content you can continue scrolling to view more..." TextColor="Black"/>
					<!-- End that above definition here -->
				</StackLayout>
				<!--- End of Post Content -->
				<BoxView WidthRequest="1" HeightRequest="1" BackgroundColor="#F16378"/>
				<!--- Start of Replies -->
				<StackLayout Padding="10, 0, 10, 0" VerticalOptions="End" Orientation="Horizontal" HorizontalOptions="FillAndExpand">
					<!-- Find a way to apply anything below here to black text -->
					<StackLayout Orientation="Vertical" HorizontalOptions="FillAndExpand" VerticalOptions="Start">
						<Label Text="This is a comment..." TextColor="Black"/>
					</StackLayout>
					<StackLayout Orientation="Vertical" HorizontalOptions="FillAndExpand" VerticalOptions="Start">
						<Label Text="John Doe" TextColor="Black" FontAttributes="Bold" HorizontalOptions="End"/>
						<Label Text="7 Sep 2015" TextColor="Black" HorizontalOptions="End"/>
					</StackLayout>
				</StackLayout>
				<!--- End of Replies -->
				<!--- Start of Comment Bar -->
				<StackLayout Orientation="Vertical" VerticalOptions="End">
					<!--- Adds a line above the comment field -->
						<!-- Putting as gray background for now as I can't figure out how to change placeholder color and underline of entry -->
						<StackLayout Orientation="Horizontal" x:Name="commentBox" Padding="10, 0, 10, 0" BackgroundColor="Gray">
							<Image Source="ThreadCommentIcon.png" HorizontalOptions="Start" HeightRequest="35" WidthRequest="35"></Image>
							<Entry HorizontalOptions="FillAndExpand" x:Name="CommentBox" Placeholder="Leave a comment" TextColor="#C9C9C9" />
						</StackLayout>
				</StackLayout>
				<!--- End of Comment Bar -->
			</StackLayout>
		</ScrollView>

	</ContentView>
</ContentPage>
